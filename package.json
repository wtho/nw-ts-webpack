{
  "name": "nw-ts-webpack-starter",
  "version": "0.3.1",
  "description": "A starter for a project with TypeScript code, running in Node-Webkit, bundled and hot-deployed by Webpack.",
  "scripts": {
    "clean": "npm cache clean --force && npm run rimraf -- node_modules dist",
    "clean:dist": "npm run rimraf -- dist",
    "lint": "npm run tslint \"src/**/*.ts\"",
    "rimraf": "rimraf",
    "build": "npm run build:prod",
    "build:prod": "npm run clean:dist && npm run lint && npm run webpack -- --config config/webpack.prod.js  --progress --profile --bail",
    "server": "npm run server:dev",
    "server:dev": "NODE_ENV=development npm run webpack-dev-server -- --config config/webpack.dev.js --open --progress --profile --watch --content-base src/",
    "server:dev:hmr": "npm run server:dev -- --hotOnly",
    "start": "npm run clean:dist && npm run webpack -- --config config/webpack.dev.js --progress --profile",
    "start:hmr": "npm run server:dev:hmr",
    "test": "npm run lint && npm run testrun",
    "testrun": "mocha src/**/*.spec.ts",
    "tslint": "tslint",
    "webpack": "webpack",
    "webpack-dev-server": "node --max_old_space_size=4096 config/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wtho/nw-ts-webpack.git"
  },
  "keywords": [
    "webkit",
    "node-webkit",
    "typescript"
  ],
  "author": "Thomas Wirth <t@ghci.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wtho/nw-ts-webpack/issues"
  },
  "homepage": "https://github.com/wtho/nw-ts-webpack#readme",
  "dependencies": {
    "nw": "^0.41.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "@types/nw.gui": "0.0.20",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "css-loader": "^3.2.0",
    "emit-json-file-webpack-plugin": "^0.1.0",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.17.1",
    "file-loader": "^4.2.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "ip": "^1.1.5",
    "json-format": "^1.0.1",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.0",
    "node-gyp": "^5.0.3",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "optimize-js-plugin": "0.0.4",
    "ora": "^3.4.0",
    "postcss-loader": "^3.0.0",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "shelljs": "^0.8.3",
    "sinon": "^7.4.2",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-middleware": "^3.7.1",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2",
    "yargs": "^14.0.0"
  }
}
